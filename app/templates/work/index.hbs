{{outlet}}

{{description-header text=model.header_text}}

<div class="blog-list content">
  {{#each model.works as |work|}}

    <div class="work-list-post">
      <img class="works-header-image" src="{{work.image_path}}">
      <h3>{{#link-to 'work.show' work.id}}{{work.title}}{{/link-to}}</h3>
      <p>{{{work.body}}}</p>
    </div>
  {{/each}}
</div>
